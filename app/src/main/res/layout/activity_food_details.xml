<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".FoodDetailsActivity">


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_250sdp">
                
                
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/chicken_fried_resized"
                    android:scaleType="centerCrop"/>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#60000000"/>
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingHorizontal="@dimen/_13sdp"
                    android:layout_gravity="bottom"
                    android:paddingVertical="@dimen/_10sdp"

                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="bottom"
                        android:layout_weight="1">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Food Information"
                            android:layout_marginStart="@dimen/_2sdp"
                            android:fontFamily="@font/bevietnam_semi_bold"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_10ssp"/>
                        <TextView
                            android:id="@+id/title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Fried Chicken"
                            android:layout_marginStart="@dimen/_1sdp"
                            android:fontFamily="@font/bevietnam_extra_bold"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_18ssp"/>



                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/back_8sdp"
                        android:gravity="center"
                        android:paddingVertical="@dimen/_15sdp"
                        android:paddingHorizontal="@dimen/_10sdp"
                        android:backgroundTint="#808B8B8B">

                        <TextView
                            android:id="@+id/healthScore"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="71"
                            android:fontFamily="@font/bevietnam_extra_bold"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_14ssp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="out of 100"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:fontFamily="@font/bevietnam_semi_bold"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_9ssp"/>

                    </LinearLayout>

                </LinearLayout>
                
            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textSize="@dimen/_14ssp"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:fontFamily="@font/bevietnam_bold"/>
            <TextView
                android:id="@+id/description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fried chicken is a dish consisting of chicken pieces usually from broiler chickens which have been floured or battered and then pan-fried, deep fried, or pressure fried. "
                android:textSize="@dimen/_11ssp"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:fontFamily="@font/bevietnam_regular"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Macro Nutrients"
                android:textSize="@dimen/_14ssp"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:fontFamily="@font/bevietnam_bold"/>


            <TableLayout
                android:id="@+id/tableLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/back_table"
                android:stretchColumns="0"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_50sdp">

                <TableRow
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    tools:ignore="UselessParent">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/bevietnam_medium"
                        android:textSize="@dimen/_8ssp"
                        android:layout_column="0"
                        android:textColor="@color/black"
                        android:paddingHorizontal="@dimen/_10sdp"
                        android:paddingVertical="@dimen/_5sdp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Per Serve"
                        android:gravity="center"
                        android:fontFamily="@font/bevietnam_semi_bold"
                        android:textSize="@dimen/_8ssp"
                        android:layout_column="1"
                        android:textColor="@color/black"
                        android:paddingHorizontal="@dimen/_10sdp"
                        android:paddingVertical="@dimen/_5sdp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Per 250gm"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:layout_column="2"
                        android:fontFamily="@font/bevietnam_semi_bold"
                        android:textSize="@dimen/_8ssp"
                        android:paddingHorizontal="@dimen/_10sdp"
                        android:paddingVertical="@dimen/_5sdp"/>

                </TableRow>

                <TableRow
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    tools:ignore="UselessParent">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:background="#90000000"
                        android:layout_column="0"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:background="#90000000"
                        android:layout_column="1"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:background="#90000000"
                        android:layout_column="2"/>




                </TableRow>

            </TableLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Facts"
                android:textSize="@dimen/_14ssp"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:fontFamily="@font/bevietnam_bold"/>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recFacts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:itemCount="2"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:orientation="horizontal"
                tools:listitem="@layout/item_facts"
                android:paddingHorizontal="@dimen/_15sdp"
                android:clipToPadding="false"
                android:layout_marginTop="@dimen/_5sdp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Similar Items"
                android:textSize="@dimen/_14ssp"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:fontFamily="@font/bevietnam_bold"/>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recSimilarItems"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:itemCount="2"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:orientation="horizontal"
                tools:listitem="@layout/item_similar_items"
                android:paddingHorizontal="@dimen/_15sdp"
                android:clipToPadding="false"
                android:layout_marginBottom="@dimen/_50sdp"
                android:layout_marginTop="@dimen/_5sdp"/>

        </LinearLayout>


    </androidx.core.widget.NestedScrollView>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/_5sdp"
        android:paddingVertical="@dimen/_10sdp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:drawableStart="@drawable/arrow"
            android:drawableTint="@color/white"
            android:layout_gravity="center_vertical"
            android:drawablePadding="@dimen/_8sdp"
            android:paddingHorizontal="@dimen/_10sdp"
            android:paddingVertical="@dimen/_10sdp"
            android:fontFamily="@font/bevietnam_medium"
            android:textColor="@color/white"
            android:textSize="@dimen/_12ssp"/>

    </LinearLayout>

    <include layout="@layout/loading_layout"
        android:id="@+id/loading_layout"
        android:visibility="gone"/>

</FrameLayout>