<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/container1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:paddingVertical="@dimen/_10sdp"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Day is not available"
        android:textSize="@dimen/_11ssp"
        android:textColor="@color/black"
        android:fontFamily="@font/bevietnam_semi_bold"/>
    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date is not available"
        android:textSize="@dimen/_9ssp"
        android:textColor="#AAAAAA"
        android:fontFamily="@font/bevietnam_medium"/>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp">


        <com.google.android.material.progressindicator.CircularProgressIndicator
            android:id="@+id/dietProgress"
            app:indicatorSize="@dimen/_180sdp"
            android:progress="1"
            android:max="100"
            android:min="0"
            android:layout_gravity="center"
            app:trackCornerRadius="@dimen/_10sdp"
            app:trackThickness="@dimen/_8sdp"
            app:trackColor="#50FAA057"
            app:indicatorColor="#FAA057"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <com.google.android.material.progressindicator.CircularProgressIndicator
            android:id="@+id/eProgress"
            app:indicatorSize="@dimen/_140sdp"
            android:progress="1"
            android:max="100"
            android:min="0"
            android:layout_gravity="center"
            app:trackCornerRadius="@dimen/_10sdp"
            app:trackThickness="@dimen/_8sdp"
            app:trackColor="#509013FE"
            app:indicatorColor="#9013FE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textSetGoal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SET GOAL!"
            android:textSize="@dimen/_14ssp"
            android:layout_gravity="center"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:fontFamily="@font/bevietnam_extra_bold"/>

        <LinearLayout
            android:id="@+id/layoutData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="gone"
            android:layout_gravity="center">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/exPts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="80"
                    android:textColor="#9013FE"
                    android:fontFamily="@font/bevietnam_extra_bold"
                    android:textSize="@dimen/_12ssp"/>

                <TextView
                    android:id="@+id/exTarget"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="out of 100"
                    android:textColor="#AAAAAA"
                    android:fontFamily="@font/bevietnam_medium"
                    android:textSize="@dimen/_8ssp"/>

            </LinearLayout>

            <View
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_2sdp"
                android:background="@drawable/back_10sdp"
                android:backgroundTint="#30AAAAAA"
                android:layout_marginVertical="@dimen/_5sdp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/dietPts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="467"
                    android:textColor="#FAA057"
                    android:fontFamily="@font/bevietnam_extra_bold"
                    android:textSize="@dimen/_12ssp"/>

                <TextView
                    android:id="@+id/dietTarget"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="out of 600"
                    android:textColor="#AAAAAA"
                    android:fontFamily="@font/bevietnam_medium"
                    android:textSize="@dimen/_8ssp"/>

            </LinearLayout>




        </LinearLayout>


    </FrameLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:drawablePadding="@dimen/_5sdp"
            android:fontFamily="@font/bevietnam_medium"
            android:textColor="@color/black"
            android:textSize="@dimen/_10ssp"
            android:drawableStart="@drawable/dietpts"
            android:text="Diet Pts"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:drawablePadding="@dimen/_5sdp"
            android:fontFamily="@font/bevietnam_medium"
            android:textColor="@color/black"
            android:layout_marginStart="@dimen/_15sdp"
            android:textSize="@dimen/_10ssp"
            android:drawableStart="@drawable/exercise_pts"
            android:text="Exercise Pts"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingHorizontal="@dimen/_10sdp"
            android:paddingVertical="@dimen/_10sdp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/calText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="@dimen/_11ssp"
                android:fontFamily="@font/bevietnam_medium"
                android:textColor="#FAA057"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cal"
                android:textSize="@dimen/_10ssp"
                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="@font/bevietnam_medium"
                android:textColor="#322E2E"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:paddingHorizontal="@dimen/_10sdp"
            android:paddingVertical="@dimen/_10sdp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/healthScoreText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="@dimen/_11ssp"
                android:fontFamily="@font/bevietnam_medium"
                android:textColor="#FAA057"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Health Score"
                android:textSize="@dimen/_10ssp"
                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="@font/bevietnam_medium"
                android:textColor="#322E2E"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingHorizontal="@dimen/_10sdp"
            android:paddingVertical="@dimen/_10sdp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/daysText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="@dimen/_11ssp"
                android:fontFamily="@font/bevietnam_medium"
                android:textColor="#FAA057"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Days"
                android:textSize="@dimen/_10ssp"
                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="@font/bevietnam_medium"
                android:textColor="#322E2E"/>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
